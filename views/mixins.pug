mixin serviceItem(icon, title, desc) 
    .service-item 
        .service-icon 
            img(src= icon, alt="")
        h3.global-heading.global-heading--normal.service-title= title 
        p.global-text.service-text= desc

mixin reviewCard(image, name, job, desc, rating)
    .review-card 
        .review-avatar 
            img(srcset= image, alt="")
        h3.review-name= name
        span.review-job= job 
        p.review-desc= desc
        .review-rating 
            img(srcset="./images/icon-star.png 2x", alt="")
            span= rating 
        .review-quote 
            img(srcset="./images/icon-quote.png 2x", alt="")

mixin blogItem(image, title, desc)
    .blog-item 
        .blog-image
            img(srcset= image, alt="")
        .blog-content 
            h3.blog-title= title 
            p.blog-text= desc
